<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{{ config.site.title }}</title>
        <meta name="description" content="{{ config.site.about }}">
        {% block stylesheets %}
        <link rel="stylesheet" href="assets/lib/bootstrap/css/bootstrap.min.css">
        <link rel="stylesheet" href="assets/lib/lightbox/ekko-lightbox.css">
        <link rel="stylesheet" href="assets/css/styles.css">
        {% endblock stylesheets %}
    </head>
<body class="bg-dark">
    <header>
        <div class="bg-dark collapse" id="navbarHeader">
            <div class="container">
                <div class="row">
                    <div class="col-sm-8 py-4">
                        <h4 class="text-white">À propos</h4>
                        <p class="text-muted">{{ config.site.about }}</p>
                    </div>
                    <div class="col-sm-4 py-4">
                        <h4 class="text-white">Contact</h4>
                        <ul class="list-unstyled">
                            {% for link in config.link %}
                            <li>
                                <a href="{{ link.url }}" class="text-white">{{ link.text ?? link.url }}</a>
                            </li>
                            {% endfor %}
                            <li>
                                <a href="mailto:{{ config.site.email }}" class="text-white"></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="navbar fixed-top navbar-dark bg-dark">
            <div class="container d-flex justify-content-between">
                <span class="navbar-brand">
                    <a href="{% block homelink %}{% endblock homelink %}"
                        class="navbar-brand" id="title">
                        {{ config.site.title }}
                    </a>
                    <span id="breadcrumbs">{% block breadcrumbs %}{% endblock breadcrumbs %}</span>
                </span>
                <button class="navbar-toggler collapsed"
                        type="button"
                        data-toggle="collapse"
                        data-target="#navbarHeader"
                        aria-controls="navbarHeader"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </div>
    </header>
    <main role="main">
    {% block main %}{% endblock main %}
    </main>
    <footer class="text-white text-muted bg-dark">
        <div class="container">
            <div class="float-right btn-group dropup">
                <p class="dropdown-toggle text-muted" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Languagues
                </p>
                <div class="dropdown-menu dropdown-menu-right">
                    <a href="de" class="dropdown-item">Deutsche</a>
                    <a href="en" class="dropdown-item">English</a>
                    <a href="fr" class="dropdown-item">Français</a>
                    <a href="it" class="dropdown-item">Italiano</a>
                </div>
            </div>
            <p>
                ©
                <a href="https://getbootstrap.com"
                    class="text-white text-muted">Bootstrap,</a>
                {{ string.signature }}
                <a href="https://jrimbault.github.io"
                    class="text-white text-muted">Jacques Rimbault
                </a>
            </p>
        </div>
    </footer>
    {% block scripts %}<script src="assets/lib/jquery/jquery.min.js"></script>
    <script src="assets/lib/popper/umd/popper.min.js"></script>
    <script src="assets/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="assets/lib/lightbox/ekko-lightbox.min.js"></script>
    <script src="assets/js/main.js"></script>{% endblock scripts %}
</body>
</html>

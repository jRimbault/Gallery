{
    "name": "jrimbault/gallery",
    "description": "simple gallery website",
    "authors": [
        {
            "name": "jRimbault",
            "email": "jacques.rimbault@gmail.com"
        }
    ],
    "require": {
        "php": "^7.0",
        "ext-imagick": "*",
        "twbs/bootstrap": "4.0.0",
        "components/jquery": "3.2.1",
        "ashleydw/lightbox": "5.3.0",
        "FezVrasta/popper.js": "1.12.9",
        "itsjavi/bootstrap-colorpicker": "^2.5",
        "twig/twig": "^2.0"
    },
    "repositories": {
        "ekko-lightbox": {
            "type": "package",
            "package": {
                "name": "ashleydw/lightbox",
                "version": "5.3.0",
                "source": {
                    "url": "https://github.com/ashleydw/lightbox",
                    "type": "git",
                    "reference": "39f585ad764230954d6a6ee86247c7e0d56db995"
                }
            }
        },
        "popper.js": {
            "type": "package",
            "package": {
                "name": "FezVrasta/popper.js",
                "version": "1.12.9",
                "source": {
                    "url": "https://github.com/FezVrasta/popper.js",
                    "type": "git",
                    "reference": "v1.12.9"
                }
            }
        }
    },
    "autoload": {
        "psr-4": {
            "Gallery\\": "src/"
        }
    },
    "license": "MIT",
    "scripts": {
        "post-install-cmd": [
            "Gallery\\Utils\\Deploy::Conf",
            "Gallery\\Utils\\Deploy::jQuery",
            "Gallery\\Utils\\Deploy::Bootstrap",
            "Gallery\\Utils\\Deploy::popperjs",
            "Gallery\\Utils\\Deploy::ekkoLightbox",
            "Gallery\\Utils\\Deploy::colorpicker"
        ]
    }
}
